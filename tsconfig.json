{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "target": "es5",
    "preserveConstEnums": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react"
  },
  "exclude": ["node_modules", "lib"],
  "files": ["src/index.ts"]
}
